<web-app>
  <display-name>Archetype Created Web Application</display-name>

  <servlet>
    <servlet-name>books</servlet-name>
    <servlet-class>com.xcr.library.controllers.GetBooks</servlet-class>
  </servlet>
  <servlet-mapping>
    <servlet-name>books</servlet-name>
    <url-pattern>/books</url-pattern>
  </servlet-mapping>

 <servlet>
   <servlet-name>addbooks</servlet-name>
   <servlet-class>com.xcr.library.controllers.AddBook</servlet-class>
 </servlet>
  <servlet-mapping>
    <servlet-name>addbooks</servlet-name>
    <url-pattern>/addbooks</url-pattern>
  </servlet-mapping>


  <servlet>
      <servlet-name>addusers</servlet-name>
      <servlet-class>com.xcr.library.controllers.AddUser</servlet-class>
  </servlet>

    <servlet-mapping>
        <servlet-name>addusers</servlet-name>
        <url-pattern>/addusers</url-pattern>
    </servlet-mapping>
</web-app>
